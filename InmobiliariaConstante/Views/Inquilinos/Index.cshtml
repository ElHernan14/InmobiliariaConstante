@model IEnumerable<InmobiliariaConstante.Models.Inquilino>

@{
    ViewData["Title"] = "Inquilinos";
}

<h1>Inquilinos</h1>

<p>
    <a asp-action="Create">Crear Nuevo Inquilino</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdInquilino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdInquilino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a asp-controller="Inquilinos" asp-action="Edit" asp-route-id="@item.IdInquilino" class="btn btn-primary" title="Editar"><i class="fas fa-user-edit"></i></a>
                    <a asp-controller="Inquilinos" asp-action="Details" asp-route-id="@item.IdInquilino" class="btn btn-primary" title="Detalles"><i class="fas fa-info"></i></a>
                    <a asp-controller="Inquilinos" asp-action="Delete" asp-route-id="@item.IdInquilino" class="btn btn-danger" title="Eliminar"><i class="fas fa-user-minus"></i></a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
