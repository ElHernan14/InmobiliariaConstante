@model IEnumerable<InmobiliariaConstante.Models.Pago>

@{
    ViewData["Title"] = "Pagos";
    var id = ViewBag.Id;
    var valor = ViewBag.ValorInmueble;
    var cuotas = ViewBag.Cuotas;
    var mensaje = ViewBag.Mensaje;
    var inquilino = ViewBag.Inquilino;
}

<h1>Pagos del Contrato de @inquilino</h1>
@if (mensaje != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>¡Éxito!</strong> @mensaje
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true"><span class="lnr lnr-cross-circle"></span></span>
        </button>
</div>
}
else
{
    <p>
        @Html.ActionLink("Cargar Pago", "Create", "Pago", new { id = id, valorInmueble = valor, cuotas = cuotas})
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaDePago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroDePago)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDePago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroDePago)
            </td>
            <td>
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a asp-controller="Pago" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" title="Editar"><i class="fas fa-user-edit"></i></a>
                    <a asp-controller="Pago" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary" title="Detalles"><i class="fas fa-info"></i></a>
                    <a asp-controller="Pago" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="Eliminar"><i class="fas fa-user-minus"></i></a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" asp-controller="Contrato">Volver lista contratos</a>
</div>
